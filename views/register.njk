{% extends 'layout.njk' %}

{% set bodyId = "page-register" %}

{% block content %}
    <div class="container">

        <header>   
                <div class="links">
                <img src="./pictures/logo.svg" alt="logo ecoleta">
                <span>
                    <img src="./pictures/arrow-left.svg" alt="">
                    <a href="/"> Voltar para home</a>
                </span>
            </div>
        </header>

        <form class="page-register">
            <div class="card_register">
                <h1>Cadastro ponto de coleta</h1>

                <h2> Dados da entidade </h2>

                <div class="all_items">
                    <div class="item">
                        <div>Nome da entidade</div>
                        <div>
                            <input  
                                type="text"
                                name="name"
                                placeholder="Ex: Ricardo Marinho"
                                required
                            >
                        </div>
                    </div>

                    <div class="grup-address">
                        <div class="item">
                            <div>Endereço</div>
                            <div>
                                <input  
                                    type="text"
                                    name="address"
                                    placeholder="Ex: Av. Bartolomeu"
                                    required
                                >
                            </div>
                        </div>

                        <div class="item">
                            <div>Número</div>
                            <div>
                                <input  
                                    type="text"
                                    name="number"
                                    placeholder="Ex: 61"
                                    required
                                >
                            </div>
                        </div>
                    </div>

                    <div class="grup-uf_city">
                        <div class="item">
                            <div>Estado</div>
                            <div>
                                <select name="uf" required>
                                    <option value="">Selecione o Estado</option>
                                </select>
                                <input 
                                    type="hidden" 
                                    name="state"
                                >
                            </div>
                        </div>

                        <div class="item">
                            <div>Cidade</div>
                            <div>
                                <select name="city" disabled required>
                                    <option value="">Selecione a Cidade</option>
                                </select>
                            </div>
                        </div>
                    </div>  

                </div>

                <div class="all_items_block">
                
                    <h3>Ítens de coleta</h3>

                    <p>Selecione um ou mais ítens abaixo</p>

                    <section class=cards_items>
                        
                        <div class="card" data-id="1">
                            <img src="pictures/lampadas.svg" alt="Lâmpadas">
                            <div>Lâmpadas</div>
                        </div>

                        <div class="card" data-id="2">
                            <img src="pictures/baterias.svg" alt="Pilhas e Baterias">
                            <div>Pilhas e Baterias</div>
                        </div>

                        <div class="card" data-id="3">
                            <img src="pictures/papeis-papelao.svg" alt="Papéis e Papelão">
                            <div>Papéis e Papelão</div>
                        </div>

                        <div class="card" data-id="4">
                            <img src="pictures/eletronicos.svg" alt="Resíduos Eletrônicos">
                            <div>Resíduos Eletrônicos</div>
                        </div>

                        <div class="card" data-id="5">
                            <img src="pictures/organicos.svg" alt="Resíduos Organicos">
                            <div>Resíduos Organicos</div>
                        </div>

                        <div class="card" data-id="6">
                            <img src="pictures/oleo.svg" alt="Óleo de Cozinha">
                            <div>Óleo de Cozinha</div>
                        </div>

                        <input type="hidden" name="items">
                    </section>
                </div>

                <button type="submit">Cadastro do Ponto de Coleta</button>

            </div>
        </form>
    </div>

    <script src="/scripts.js"></script>
    
{% endblock %}